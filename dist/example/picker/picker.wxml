<view class="page" data-theme="{{theme}}">
    <view class="page__hd">
        <view class="page__title">Picker</view>
        <view class="page__desc">选择器，这里使用小程序原生的picker。</view>
    </view>
    <view class="page__bd">
        <view class="btn-area">
            <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                <a class="btn btn_default">单列选择器</a>
            </picker>
            <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                <a class="btn btn_default">时间选择器</a>
            </picker>
            <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                <a class="btn btn_default">日期选择器</a>
            </picker>
        </view>
    </view>
</view>
