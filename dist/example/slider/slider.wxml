<view class="page" data-theme="{{theme}}">
	<view class="page__hd">
		<view class="page__title">Slider</view>
		<view class="page__desc">滑块</view>
	</view>
	<view class="page__bd page__bd_spacing">
		<view class="slider">
			<view class="slider__inner">
				<view style="width: 0;" class="slider__track"></view>
				<view style="left: 0;" class="slider__handler"></view>
			</view>
		</view>
		
		<view class="slider-box">
			<view class="slider">
				<view class="slider__inner">
					<view style="width: 50%;" class="slider__track"></view>
					<view style="left: 50%;" class="slider__handler"></view>
				</view>
			</view>
			<view class="slider-box__value">50</view>
		</view>
	</view>
</view>
