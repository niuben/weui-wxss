<view class="page" data-theme="{{theme}}">
    <view class="page__hd">
        <view class="page__title">Form</view>
        <view class="page__desc">表单页</view>
    </view>
    <view class="page__bd page__bd_spacing">
        <a bindtap="open" data-url="form_page" class="btn btn_default">表单结构</a>
        <a bindtap="open" data-url="form_input_status" class="btn btn_default">输入框状态</a>
        <a bindtap="open" data-url="form_vcode" class="btn btn_default">验证码</a>
        <a bindtap="open" data-url="form_checkbox" class="btn btn_default">复选框</a>
        <a bindtap="open" data-url="form_radio" class="btn btn_default">单选框</a>
        <a bindtap="open" data-url="form_switch" class="btn btn_default">开关</a>
        <a bindtap="open" data-url="form_select" class="btn btn_default">选择框</a>
        <a bindtap="open" data-url="form_textarea" class="btn btn_default">文本域</a>
