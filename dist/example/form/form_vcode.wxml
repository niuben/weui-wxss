<view class="page" data-theme="{{theme}}">
	<view class="form">
		<view class="form__text-area">
			<h2 class="form__title">验证码</h2>
			<view class="form__desc">验证手机号样式</view>
		</view>
		<view class="form__control-area">
			<view class="cells__group cells__group_form">
				<view class="cells cells_form">
					<view class="cell cell_active">
						<view class="cell__hd"><label class="label">手机号</label></view>
						<view class="cell__bd">
							<input class="input" type="number" placeholder="请输入手机号" value="12345678907" placeholder-class="input__placeholder" />
						</view>
						<view class="cell__ft">
							<a class="btn_reset btn_icon">
								<i class="icon-info-circle"></i>
							</a>
						</view>
					</view>
					<view class="cell cell_active cell_vcode">
						<view class="cell__hd"><label class="label">验证码</label></view>
						<view class="cell__bd">
							<input class="input" type="text" placeholder="输入验证码" placeholder-class="input__placeholder" />
						</view>
						<view class="cell__ft">
							<a class="btn btn_default vcode-btn">获取验证码</a>
						</view>
					</view>
				</view>
				<view class="cells__tips">
                    <a class="link">收不到验证码</a>
                </view>
			</view>
		</view>
		<view class="form__tips-area">
            <label class="agree">
                <checkbox class="agree__checkbox-check" />

                <span class="agree__checkbox"></span>
                <span class="agree__text">阅读并同意<a>《相关条款》</a></span>
            </label>
		</view>
		<view class="form__opr-area">
			<a class="btn btn_primary btn_disabled">确定</a>
		</view>
	</view>
</view>
