<view class="page" data-theme="{{theme}}">
	<view class="form">
		<view class="form__text-area">
			<h2 class="form__title">原生选择框</h2>
		</view>
		<view class="form__control-area">
			<view class="cells__group cells__group_form">
				<view class="cells">
					<view class="cell cell_active cell_select">
						<view class="cell__bd">
                            <picker bindchange="bindPicker1Change" range="{{array1}}">
                                <view class="select">{{array1[value1]}}</view>
                            </picker>
						</view>
					</view>
					<view class="cell cell_active cell_select cell_select-before">
						<view class="cell__hd">
                            <picker bindchange="bindPicker2Change" range="{{array2}}">
                                <view class="select" style="width: 3em">{{array2[value2]}}</view>
                            </picker>
						</view>
						<view class="cell__bd">
							<input class="input" type="number" placeholder="请输入号码" value="12345678907"></input>
						</view>
					</view>
					<view class="cell cell_active cell_select cell_select-after">
						<view class="cell__hd">
							<label class="label" style="width: 3em">国家</label>
						</view>
						<view class="cell__bd">
                            <picker bindchange="bindPicker3Change" range="{{array3}}">
                                <view class="select">{{array3[value3]}}</view>
                            </picker>
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="form__opr-area">
			<a class="btn btn_primary">确定</a>
		</view>
	</view>
</view>
